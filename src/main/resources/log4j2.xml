<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss} %-5level [%c{1}] - %msg%n" />
		</Console>

		<File name="FileAppender" fileName="logs/Application.log"
			append="true" createOnDemand="true">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
		</File>
	</Appenders>

	<Loggers>
		<!-- Explicitly log everything from your application -->
		<Logger name="com" level="trace" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Logger>

		<!-- You can add more package-level loggers if needed -->
		<!-- <Logger name="org.openqa.selenium" level="debug" additivity="false"> 
			<AppenderRef ref="Console"/> </Logger> -->

		<!-- Root logger: everything not otherwise caught -->
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Root>
	</Loggers>
</Configuration>
